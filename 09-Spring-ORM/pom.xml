  <modelVersion>4.0.0</modelVersion>

  <groupId>in.digeshwar</groupId>
  <artifactId>08-Spring-ORM</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>09-Spring-ORM</name>
  <url>http://maven.apache.org</url>

  <properties>
